// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String
  createAt DateTime @default(now())
  posts    Post[]   @relation("post")
  role     Role     @default(USER)
}

model Post {
  id          String      @id @default(uuid())
  title       String      @unique
  source      String
  description String
  createAt    DateTime    @default(now())
  updateAt    DateTime    @updatedAt
  category    Category    @default(lainnya)
  pricelist   Pricelist[] @relation("pricelist")
  author      User        @relation("post", fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String
}

model Pricelist {
  id       String   @id @default(uuid())
  title    String   @unique
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  size     String
  price    Int
  print    Int
  post     Post     @relation("pricelist", fields: [postId], references: [id], onDelete: Cascade)
  postId   String
}

enum Category {
  plastik
  sticker
  kemasan
  stationary
  kain
  lainnya
}

enum Role {
  USER
  ADMIN
}
